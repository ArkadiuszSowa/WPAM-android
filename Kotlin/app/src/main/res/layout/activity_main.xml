<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="com.example.myapplication.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="33dp" android:layout_weight="2" android:background="@color/colorBlackBackground">
            <TextView
                    android:text="Game test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/tvGame" android:layout_weight="1"
                    android:gravity="center" android:textSize="30sp" android:textColor="@color/colorWhiteText"
                    android:background="@color/colorBlackBackground" android:layout_marginRight="2pt"/>
            <TextView
                    android:text="Settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/tvSettings" android:layout_weight="1"
                    android:gravity="center" android:textSize="30sp" android:textColor="@color/colorWhiteText"
                    android:background="@color/colorBlackBackground" android:layout_marginLeft="2pt"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="97dp" android:id="@+id/linearLayout"
                android:layout_weight="8" android:background="@color/colorBlackBackground">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivGame" android:layout_weight="1" android:onClick="newGameTest"
                    android:background="@color/colorBlackText"
                    app:srcCompat="@drawable/ic_videogame_asset_black_24dp" android:layout_margin="2pt"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_settings_black_24dp"
                    android:id="@+id/ivSettings" android:layout_weight="1" android:onClick="newSettings"
                    android:background="@color/colorBlackText" android:layout_margin="2pt"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="62dp" android:layout_weight="1">
            <TextView
                    android:text="Alarm manager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/tvAlarm" android:layout_weight="1"
                    android:gravity="center" android:textSize="36sp" android:textColor="@color/colorWhiteText"
                    android:background="@color/colorBlackBackground"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="287dp" android:layout_weight="8"
                android:background="@color/colorBlackBackground">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_alarm_add_black_24dp"
                    android:id="@+id/ivAlarm" android:layout_weight="1" android:onClick="newAlarmManager"
                    android:background="@color/colorBlackText" android:layout_margin="2pt"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
